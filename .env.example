# Debug mode - enables histogram saving and detailed logging
DEBUG=True
# GPU acceleration using CuPy
USE_GPU=False

# ImageJ-style processing
USE_IMAGEJ=True

# Threshold detection method
# Options: auto, valley, otsu, knee, percentile_25, secondary_peak
THRESHOLD_METHOD=none

# Wavelet denoising parameters
WAVELET_TYPE=sym4
WAVELET_LEVEL=3
WAVELET_METHOD=BayesShrink
WAVELET_MODE=soft

# Image cropping parameters (pixels to crop from each side)
CROP_TOP=0
CROP_BOTTOM=0
CROP_LEFT=0
CROP_RIGHT=0

# Contrast enhancement control
USE_CLAHE=False
USE_CONTRAST_ENHANCEMENT=True
# USE_NORMALIZE: Enable/disable normalization step (histogram stretching to full 16-bit range)
# Note: The target bit depth (16-bit=65535) is defined in the code as constants
USE_NORMALIZE=False
# ImageJ-style normalization parameters
# NORMALIZE_SATURATED_PIXELS: Percentage of pixels to saturate (0-100)
# Uses ImageJ's histogram threshold counting method for robust stretching
NORMALIZE_SATURATED_PIXELS=5

# ImageJ Contrast Enhancement parameters
CONTRAST_SATURATED_PIXELS=5
CONTRAST_NORMALIZE=True
CONTRAST_EQUALIZE=True
CONTRAST_CLASSIC_EQUALIZATION=False

# CLAHE parameters
CLAHE_BLOCKSIZE=127
CLAHE_HISTOGRAM_BINS=256
CLAHE_MAX_SLOPE=0.6
CLAHE_FAST=False
CLAHE_COMPOSITE=True

# Parallel processing parameters
# Number of parallel workers (leave empty for auto: 4 for GPU, CPU-1 for CPU)
NUM_WORKERS=6


# For Without ffc for process_without_ffc.py
# Skip specific steps
USE_DENOISE=False
USE_CROP_ROTATE=True
USE_NORMALIZE=False
THRESHOLD_METHOD=none
USE_INVERT=True
USE_CONTRAST_ENHANCEMENT=True
USE_CLAHE=True

# Input/Output paths for complete_pipeline.py
# Single image processing
DARK_PATH=Dark Image.tiff
FLAT_PATH=Flat Image.tiff
RAW_PATH=Raw Image.tiff
OUTPUT_DIR=output

# Batch processing paths for test_complete_pipeline.py
BASE_PATH=Test Data
BATCH_OUTPUT_DIR=batch_output

# Default processing option for test_complete_pipeline.py
# Options: 1=first 5 images, 2=first 10 images, 3=all images, 4=custom, 0=ask user
DEFAULT_PROCESS_OPTION=3